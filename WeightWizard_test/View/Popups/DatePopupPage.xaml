<?xml version="1.0" encoding="utf-8"?>

<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:mopupsanim="clr-namespace:Mopups.Animations;assembly=Mopups"
             x:Class="WeightWizard_test.View.Popups.DatePopupPage"
             Title="DatePopupPage" BackgroundColor="#00FFFFFF">
    <mopups:PopupPage.Animation>
        <mopupsanim:ScaleAnimation
            DurationIn="200"
            PositionIn="Bottom"
            PositionOut="Bottom"
            ScaleIn="1"
            ScaleOut="1"/>
    </mopups:PopupPage.Animation>
    <VerticalStackLayout HeightRequest="300" VerticalOptions="End" BackgroundColor="WhiteSmoke">
        <Border>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40,40,40,40"/>
            </Border.StrokeShape>
            <Label
            Text="TestPopup"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        </Border>
    </VerticalStackLayout>
</mopups:PopupPage>