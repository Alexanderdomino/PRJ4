<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeightWizard_test.View.TrendPage"
             xmlns:local="clr-namespace:WeightWizard_test.Model"
             xmlns:drawables="clr-namespace:WeightWizard_test.Model.Drawables"
             Background="Blue">
    
    
    <ContentPage.Resources>
        <drawables:GraphicsDrawable x:Key="Drawable"/>
    </ContentPage.Resources>
    
    <ScrollView>
        <ScrollView.Resources>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="WhiteSmoke"/>
            </Style>
        </ScrollView.Resources>
        
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Weight Wizard"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="25"
                HorizontalOptions="Center" />
            
            <Label
                Text="Trend"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <HorizontalStackLayout
                Spacing="25"
                Padding="30,0"
                HorizontalOptions="Center">

                <Button
                    x:Name="CalorieBtn"
                    Text="Show calories"
                    SemanticProperties.Hint="shows only calories"/>

                <Button
                    x:Name="KgBtn"
                    Text="Show weight"
                    SemanticProperties.Hint="shows only weight"/>

                <Button
                    x:Name="allBtn"
                    Text="Show all"
                    SemanticProperties.Hint="shows all"/>



            </HorizontalStackLayout>

            <GraphicsView Drawable="{StaticResource Drawable}"
                HeightRequest="200"
                WidthRequest="250"
                HorizontalOptions="Center"/>


            <HorizontalStackLayout
                Spacing="25"
                Padding="30,0"
                HorizontalOptions="Center">


                <Button
                x:Name="3Btn"
                Text="3 months"
                SemanticProperties.Hint="Saves logged data from current day"/>

                <Button
                x:Name="1yBtn"
                Text="1 year"
                SemanticProperties.Hint="Saves logged data from current day"/>

                <Button
                    x:Name="allBtn"
                    Text="All"
                    SemanticProperties.Hint="Shows data for one year"/>




            </HorizontalStackLayout>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>